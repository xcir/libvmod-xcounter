varnishtest "Test xcounter vmod(rush)"

barrier b1 cond 9

server s1 -repeat 9 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import ${vmod_xcounter};

	sub vcl_init {
		new xc = xcounter.vsc();
	}

	sub vcl_recv {
		xc.incr(1);
	}

} -start

client c1 {
